extends layout

block content
  script(type='text/javascript', src='/js/board-controller.js')
  div(class="container desktop-container" ng-controller="BoardController")
    div(class="row heading")
      div(class="col-md-12")
        h1 Multiplayer Sudoku
    div(class="row")
      div(class="col-md-6")
        div(class="sudoku-board")
          div(class="sudoku-col-label" ng-repeat="c in ['','A','B','C','D','E','F','G','H','I']") {{ c }}
          div(class="sudoku-row" ng-repeat="row in board") 
            div(class="sudoku-row-label") {{ $index + 1 }}
            div(ng-repeat="col in row track by $index" ng-class="col") {{ col.value }}
            //- div(ng-repeat="col in row track by $index" ng-class="'sudoku-col ' + {true:'fixed', false:''}[col.fixed]") {{ col.value }}
      div(class="col-md-6")
        h2(ng-repeat="log in logs") {{ log.name }} added {{ log.board_value }} to cell {{ get_square(log) }}
        //- pre {{ board }}
