extends layout

block content
  script(type='text/javascript', src='/js/player-controller.js')
  div(class="container mobile-container" ng-controller="PlayerController")
    <form role="form">
      <div class="form-group">
        <label for="row-input">Row</label>
        <input type="text" class="form-control" id="row-input" placeholder="Enter row number" ng-model="row_value">
      </div>
      <div class="form-group">
        <label for="col-input">Column</label>
        <input type="text" class="form-control" id="col-input" placeholder="Enter column number" ng-model="col_value">
      </div>
      <div class="form-group">
        <label for="board-value">Value</label>
        <select class="form-control" id="board-value" ng-model="board_value">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
          <option>6</option>
          <option>7</option>
          <option>8</option>
          <option>9</option>
        </select>
      </div>
      <button class="btn btn-default" ng-click="submitResponse()">Submit</button>
    </form>
