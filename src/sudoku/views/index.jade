extends layout

block content
  script(type='text/javascript', src='/js/player-controller.js')
  br
  div(class="container mobile-container" ng-controller="PlayerController")
    form(role="form")
      div(class="form-group")
        label(for="name") Name
        input(type="text", class="form-control", id="name", ng-model="name")
      div(class="form-group")
        label(for="col-input") Column
        select(class="form-control", id="col-input", ng-model="col_value")
          option(value="1") A
          option(value="2") B
          option(value="3") C
          option(value="4") D
          option(value="5") E
          option(value="6") F
          option(value="7") G
          option(value="8") H
          option(value="9") I
      div(class="form-group")
        label(for="row-input") Row
        select(class="form-control", id="row-input", ng-model="row_value")
          option(value="1") 1
          option(value="2") 2
          option(value="3") 3
          option(value="4") 4
          option(value="5") 5
          option(value="6") 6
          option(value="7") 7
          option(value="8") 8
          option(value="9") 9
      div(class="form-group")
        label(for="board-value") Value
        select(class="form-control", id="board-value", ng-model="board_value")
          option(value="1") 1
          option(value="2") 2
          option(value="3") 3
          option(value="4") 4
          option(value="5") 5
          option(value="6") 6
          option(value="7") 7
          option(value="8") 8
          option(value="9") 9
      button(class="btn btn-default", ng-click="submitResponse()") Submit
