extends layout_mobile

block header

block content

	script(type='text/javascript', src='/lib/virtualjoystick.js')
	script(type='text/javascript', src='/js/controller/controller.js')
	div(class="pre-game-container")
		div(class="choose-name-container")
			p Enter your name
			input(type = 'textfield',id='playername',name = 'name', value = '')
		div(class="choose-ninja")
			p Choose a Nutty Ninja!
			label(for="ninja-red")
				img(id="red-ninja" src="/images/ninja-red.png" width="128" height="128")
			input(type = 'radio', name='ninjaChoose', id='ninja-red', value = 'red', checked='checked')
			label(for="ninja-yellow")
				img(id="yellow-ninja" src="/images/ninja-yellow.png" width="128" height="128")
			input(type="radio", name='ninjaChoose', id='ninja-yellow', value = 'yellow')
		div(class="join-button")
			a Play!
	div(class="controller-container")
		div(class="controller-inner-container")
			div(class="joystick-section joystick-left" id="left-section")
				div(class="controller-stick" id="controller-stick")
			div(class="joystick-section joystick-right" id="right-section")
				div(class="controller-button" id="shoot-button")
				div(class="controller-button" id="block-button")
	