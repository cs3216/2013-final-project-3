extends layout

block content
  script(type='text/javascript', src='/js/shake-controller.js')
  div(class="container mobile-container" ng-controller="ShakeController")
    div(ng-class="mobile_landing_container")
      div(class="row heading")
        div(class="col-md-12")
          h1 Apple vs Android
      div(class="row")
        div(class="col-xs-6 mobile-brand-selection")
          img(class="brand-logo img-responsive" src="/images/apple-logo.png" ng-click="chooseBrand('apple')")
        div(class="col-xs-6 mobile-brand-selection")
          img(class="brand-logo img-responsive" src="/images/android-logo.png" ng-click="chooseBrand('android')")
    div(ng-class="mobile_shaking_container")
      div(class="col-md-6 col-md-offset-3 col-xs-12 mobile-shaker")
        img(ng-class="brand_image_class" ng-src="{{chosen_image}}" ng-click="shake()")
        h1 Shake!
